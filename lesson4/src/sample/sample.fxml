<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>

<VBox fx:controller="sample.Controller" xmlns:fx="http://javafx.com/fxml" alignment="center">
    <TextArea fx:id="mainTextArea" editable="false" VBox.vgrow="ALWAYS" />

    <HBox>
        <TextField fx:id="messageField" HBox.hgrow="ALWAYS" promptText="Введите сообщение" onAction="#sendMassage"/>
        <Button text="Отправить" onMouseClicked="#sendMassage"/>
    </HBox>
</VBox>
